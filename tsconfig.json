{
    "compilerOptions": {
        "target": "es2022",
        "module": "es2022",
        "lib": [
            "ESNext",
            "DOM"
        ],
        // https://github.com/vitejs/vite/discussions/14950#discussioncomment-7542722
        "types": ["vite/client"],
        "moduleResolution": "Node",
        "isolatedModules": true,
        "useDefineForClassFields": true,
        "strict": true,
        "strictNullChecks": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "noEmit": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "allowJs": true,
        "checkJs": true,
    },
    "include": [
        "web/src/**/*.d.ts",
        "web/src/**/*.ts",
        "web/src/**/*.js",
    ],
}